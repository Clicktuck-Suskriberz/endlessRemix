// Cues however, does.

sequenceSoumen:
	set_cat 0
    rest 0x8
	call changeEngine
	engine 0x1B
	sub 4
	0x29<2> 
    rest 0x10
	0xB3 9, 0x1B
    fade<1> 1,1,1
    input 1
    random 1
    switch
    case 0
        0xB3 score_add, 5
        async_call soumen1
    endswitch
    async_call somenBeat
    0x106<1>
    0x104<1>
    zoom 3, -0xAE, 0xAE
    pan 3, -0x35, 0x8
stop

soumen1:
async_call shorthand
rest 0x90
